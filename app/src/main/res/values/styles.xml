<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="GroupInputView">
        <attr format="string" name="giv_title"/>
        <attr format="string" name="giv_inputHint"/>
        <attr format="string" name="giv_inputText"/>
        <attr format="string" name="giv_inputType"/>
        <attr format="string" name="giv_rule"/>
        <attr format="integer" name="giv_input_maxLength"/>
    </declare-styleable>

</resources>
